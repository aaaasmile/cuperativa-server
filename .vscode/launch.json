    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Server with rdbg",
            "type": "rdbg",
            "request": "launch",
            "script": "${workspaceRoot}/server/daemon_cup.rb",
            "args": [
                "run"
            ],
            "command": "D:/ruby/ruby_3_2_0/bin/ruby.exe",
            "rdbgPath": "D:/ruby/ruby_3_2_0/bin/rdbg.bat",
            "cwd": "${workspaceFolder}/server",
            "askParameters": false
        },
        {
            "type": "rdbg",
            "name": "Attach with rdbg",
            "request": "attach"
        }
    ]
}